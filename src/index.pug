    body(bgcolor="#F4F4F6", style="margin: 0; box-sizing: border-box;")
        main.demo
            .demo-wrapper
                +slider-card({isRange: true, currentValue: "10 30", isScaleEnabled: true, numOfScaleMark: 5})
                +slider-card({minVal: -10, maxVal: 10, step: 0.5, isRangeLineEnabled: true})
                +slider-card({isHorizontal: false, isRange: true, currentValue: "-5 5", isScaleEnabled: true, numOfScaleMark: 5,minVal: -10, maxVal: 10, isRangeLineEnabled: true})
                +slider-card({isHorizontal: false, minVal: -10, maxVal: 10, step: 0.5, isCurrentValueVisible: false})