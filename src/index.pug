include ./demopage/blocks/slider-card/slider-card.pug

doctype html

html(lang='en')
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title="FSD-front-4th-tsk"
        link(rel="apple-touch-icon" sizes="180x180" href="/FSD-front-4th-tsk/favicons/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="/FSD-front-4th-tsk/favicons/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="/FSD-front-4th-tsk/favicons/favicon-16x16.png")
